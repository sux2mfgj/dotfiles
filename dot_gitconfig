[include]
    # create ~/.gitconfig.local file to define [user] section.
    # [user]
    # 	  name = Your name
    # 	  email = Email address
    path = ~/.gitconfig.local

[credential]
    helper = cache --timeout=7200

[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto

[alias]
    st = status
    sh = show
    so = remote show origin
    ft = fetch
    up = pull --rebase
    ad = add
    ci = commit -a # move modified file to statge
    cam = commit -a --amend #amendment just before commit
    co = checkout
    tags = tag
    graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order

    # branch
    br = branch
    ba = branch -a # show all branch
    bm = branch --merged
    bn = branch --no-merged

    # log
    lp = log -p # show diff together

    # diff
    dm = diff master

[credential]
    helper = cache --timeout=7200

[merge]
    keepBackup = false
    tool = vimdiff
